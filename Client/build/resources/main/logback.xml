<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}|%highlight(%-5level)|%X{log-trace-id}|[%blue(%t)]|%yellow(%logger{36})|%method|%msg%n</Pattern>
        </layout>
    </appender>
    <root level="debug">
        <appender-ref ref="Console"/>
    </root>
</configuration>